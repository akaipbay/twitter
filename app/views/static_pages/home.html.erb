<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

<div class="center hero-unit">
  <h1>Добро пожаловать в Twitter!</h1>

  <h2>
    это домашняя страница для социальной сети <a href="http://web.method.kz/">курса по
    Ruby on Rails</a>
    sample application.
  </h2>

  <%= link_to "Регистрация", signup_path, class: "btn btn-large btn-primary" %>
  <br>
</div>


</div>
<% end %>
<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>